# 测试环境配置
NODE_ENV=test

# 应用配置
VITE_APP_TITLE=万里学院前端系统 - 测试环境
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=万里学院前端开发框架 - 测试环境

# API配置
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=15000

# 开发工具配置
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK=true

# 日志配置
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOG=true

# 测试配置
VITE_TEST_MODE=true
VITE_TEST_API_DELAY=500
VITE_TEST_MOCK_ENABLED=true

# E2E 测试配置
VITE_E2E_BASE_URL=http://localhost:3002
VITE_E2E_TIMEOUT=30000
VITE_E2E_HEADLESS=true

# 性能监控
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_REPORTING=true

# 调试配置
VITE_DEBUG_MODE=true
VITE_VERBOSE_LOGGING=true